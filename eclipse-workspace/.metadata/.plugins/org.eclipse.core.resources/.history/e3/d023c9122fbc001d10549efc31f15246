import java.util.Scanner;

public class Kieudulieutrongjava {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Nhap chieu dai va chieu rong hinh chu nhat!");

		System.out.println("Chieu Dai = ");
		float chieuDai = sc.nextFloat();
		System.out.println("Chieu Rong = ");
		float chieuRong = sc.nextFloat();

		float chuVi = (chieuDai + chieuRong) * 2;
		float dienTich = chieuDai * chieuRong;

		System.out.println("Chu vi hinh chu nhat = "+chuVi);
		System.out.println("Dien tich hinh chu nhat = "+dienTich);
		

	}
}
